<script>
// Fetch YouTube trending videos (RSS feed)
const url = "https://www.youtube.com/feeds/videos.xml?playlist_id=PLrEnWoR732-BHrPp_Pm8_VleD68f9s14-";

fetch("https://api.allorigins.win/get?url=" + encodeURIComponent(url))
    .then(response => response.json())
    .then(data => {
        let xml = new window.DOMParser().parseFromString(data.contents, "text/xml");
        let entries = xml.getElementsByTagName("entry");
        let container = document.getElementById("video-list");
        container.innerHTML = "";

        for (let i = 0; i < 5; i++) {  // 5 trending videos
            let entry = entries[i];
            let title = entry.getElementsByTagName("title")[0].textContent;
            let videoId = entry.getElementsByTagName("yt:videoId")[0].textContent;

            container.innerHTML += `
                <div class="video">
                    <h2>${title}</h2>
                    <iframe src="https://www.youtube.com/embed/${videoId}" allowfullscreen></iframe>
                </div>
            `;
        }
    })
    .catch(err => {
        document.getElementById("video-list").innerHTML = "<h3>Error loading videos</h3>";
    });
</script>

